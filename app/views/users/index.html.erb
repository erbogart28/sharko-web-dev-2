<% provide(:title, 'All users') %>

<h1>All Users</h1>
<div class="col-md-6">
    <ul class="users">
      <% @users.each do |user| %>
        <li>
          <%= gravatar_for user, size: 50 %>
          <%= link_to user.email, user %>
         <%= link_to "delete", user, method: :delete,
                                  data: { confirm: "You sure?" } %>
        <% end %>
        </li>
    </ul>
</div>
