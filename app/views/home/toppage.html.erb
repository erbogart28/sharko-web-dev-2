<h1>Admin Page</h1><br>
    <p> It's <%= Time.now %></p>

   <div class="container"  id="adminOptions">
        <div class="row">
            <div class="col-xs-12 col-sm-4">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            View Orders
                        </h4>
                        
                        <p class="editCateringText">
                            There are <%= pluralize(@total_orders, "order") %>!
                        </p>
                        <div class="access">
                            <%= link_to 'View new orders',  orders_path, :class => "btn btn-danger" %>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xs-12 col-sm-4">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            Edit Catering Order Options
                        </h4>
                        
                        <p class="editCateringText">
                            Edit, update, or delete catering options here  
                        </p>
                        <div class="access">
                            <%= link_to 'Access Catering Options', cater_order_options_path, :class => "btn btn-danger" %>
                        </div>
                    </div>
                </div>
            </div>
                    
            <div class="col-xs-12 col-sm-4">
                <div class="card">
                    <div class="card-content">
                        <h4 class="card-title">
                            View User Email List
                        </h4>
                        <p class="emailIndexText">
                            All exisiting customer emails can be found here.
                        </p>
                        <div class="access">
                            <%= link_to 'Access User List', users_path, :class => "btn btn-danger" %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>